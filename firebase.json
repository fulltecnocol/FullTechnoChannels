{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "venv",
                ".git",
                "firebase-debug.log",
                "firebase-debug.log.*"
            ]
        }
    ],
    "hosting": {
        "source": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "membership-backend",
                    "region": "us-central1"
                }
            },
            {
                "source": "/bot/**",
                "run": {
                    "serviceId": "membership-backend",
                    "region": "us-central1"
                }
            }
        ],
        "frameworksBackend": {
            "region": "us-central1"
        }
    }
}