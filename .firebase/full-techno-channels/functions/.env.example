# Telegram Config
TELEGRAM_BOT_TOKEN=your_bot_token_here
# WEBHOOK_URL es necesario para despliegue en Google Cloud Run
WEBHOOK_URL=https://tu-app-en-cloud-run.a.run.app

# Stripe Config
STRIPE_API_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
# Comisión que se queda el dueño de la plataforma (ej: 0.10 para 10%)
PLATFORM_FEE_PERCENT=0.10

# Database Config (Supabase)
# Formato: postgresql+asyncpg://postgres.[USUARIO]:[PASSWORD]@[HOST]:5432/postgres
# Nota: Usa postgresql+asyncpg para que SQLAlchemy use el driver correcto.
DATABASE_URL=postgresql+asyncpg://postgres:password@db.supabase.co:5432/postgres

# App Config
JWT_SECRET_KEY=genera_una_clave_larga_y_segura
DASHBOARD_URL=http://localhost:3000
API_URL=http://localhost:8000

# Wompi Config (Colombia)
WOMPI_PUBLIC_KEY=pub_test_...
WOMPI_PRIVATE_KEY=prv_test_...
WOMPI_INTEGRITY_SECRET=test_integrity_...
WOMPI_EVENTS_SECRET=test_events_...

# Redis Config
REDIS_URL=redis://localhost:6379/0
